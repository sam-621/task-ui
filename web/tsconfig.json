{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      "@/providers": ["core/providers"],
      "@/utils": ["core/utils"],
      "@/services": ["core/services"],
      "@/hooks": ["core/hooks"],
      "@/interfaces": ["core/interfaces"],
      "@/constants": ["core/constants"],
      "@/store": ["core/store"],
      "@/libs": ["core/libs"],
      "@/types": ["core/types"],
      "@/icons": ["core/components/icons"],
      "@/atoms": ["core/components/atoms"],
      "@/molecules": ["core/components/molecules"],
      "@/organisms": ["core/components/organisms"],
      "@/layouts": ["core/components/layouts"],
      "@/sections": ["core/components/sections"],
      "@/custom": ["core/components/custom"],

      "@/modules": ["modules"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "references": [{ "path": "./tsconfig.node.json" }]
}

